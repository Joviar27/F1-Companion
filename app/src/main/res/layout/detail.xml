<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitish_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/include_overview"
            layout="@layout/detail_overview"/>

        <include
            android:id="@+id/include_bio"
            layout="@layout/detail_bio"/>

        <include
            android:id="@+id/include_driver"
            layout="@layout/detail_driver"/>

        <include
            android:id="@+id/include_gallery"
            layout="@layout/detail_gallery"/>
    </LinearLayout>
    
</ScrollView>