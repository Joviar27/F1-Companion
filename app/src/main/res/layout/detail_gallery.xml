<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ViewGroup">

    <TextView
        android:id="@+id/textView"
        style="@style/Title.Bold"
        android:text="@string/mini_gallery"
        android:textColor="@color/dark_grey"
        app:layout_constraintBottom_toTopOf="@+id/iv_pic1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_pic1"
        android:layout_width="200dp"
        android:layout_height="215dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:src="@tools:sample/backgrounds/scenic"/>

    <ImageView
        android:id="@+id/iv_pic2"
        style="@style/iv_Gallery"
        app:layout_constraintBottom_toTopOf="@+id/iv_pic3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_pic1"
        app:layout_constraintTop_toTopOf="@+id/iv_pic1"
        tools:src="@tools:sample/backgrounds/scenic"/>

    <ImageView
        android:id="@+id/iv_pic3"
        style="@style/iv_Gallery"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_pic1"
        app:layout_constraintTop_toBottomOf="@+id/iv_pic2"
        tools:src="@tools:sample/backgrounds/scenic" />



</androidx.constraintlayout.widget.ConstraintLayout>