<resources>
    <!-- Base application theme. -->
    <style name="Theme.F1Companion" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_taupe</item>
        <item name="colorPrimaryVariant">@color/taupe</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.F1Companion.Splash">
        <item name="android:statusBarColor">@color/dusty_beige</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title.Semibold">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Title.Bold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Title.white">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextTable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTable.left">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextTable.right">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="TextContent.Smaller">
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ViewGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="Iv_ConDriver">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">145dp</item>
        <item name="android:background">@drawable/iv_con_driver</item>
    </style>

    <style name="Iv_Driver">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="iv_Gallery">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>